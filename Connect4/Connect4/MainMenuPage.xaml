<Page x:Class="Connect4.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Connect4"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainMenu">

    <Grid>
        <Label x:Name="Lbl_MainMenu" Content="Welcome to Connect 4!" HorizontalContentAlignment="Center" FontSize="24" FontFamily="Impact" Height="60" Margin="0,-160,0,0"/>
        <Button x:Name="Btn_StartNewGame" Content="Start New Game" HorizontalAlignment="Center" Height="40" Width="230" Margin="35,105,35,85" Click="BtnClickNewGame" />
        <Button x:Name="Btn_Scoreboard" Content="Scoreboard" HorizontalAlignment="Center" Height="40" Width="230" Margin="35,205,35,49" Click="BtnShowScores"/>
    </Grid>
</Page>
